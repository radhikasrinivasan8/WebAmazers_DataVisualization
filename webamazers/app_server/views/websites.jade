extends layout
block websites
    link(href='/styles/styles.css', rel='stylesheet')
    div
       form(action='/searchFromDB',method='get')
            input#websiteName(type='text', name='websiteName' placeholder='Search for a website')
            input#searchInDB(type='submit' value='Search')
    div
        form(action='/insertDbData',method='post')
            input#insertWebsite(type='text' name='insertWebsite' placeholder='Website')
            input#insertCountryRank(type='text' name='insertCountryRank' placeholder='Country Rank')
            input#insertChildSafety(type='text' name='insertChildSafety' placeholder='Child Safety')
            input#insertTrustworthiness(type='text' name='insertTrustworthiness' placeholder='Trustworthiness')
            input#insertAvgDailyPageviews(type='text' name='insertAvgDailyPageviews' placeholder='Average daily pageview')
            input#insertPrivacy(type='text' name='insertPrivacy' placeholder='Privacy')
            input#submittoDB(type='submit' value='Insert')
 
        table.table.table-hover
            thead
                tr  
                    td='Website'
                    td='Country Rank'
                    td='Child Safety'
                    td='Trustworthiness'
                    td='Average Daily Page Views'
                    td='Privacy'
                    td='Actions'
            tbody
                each website,index in websites
                    tr(id=website._id)
                        td(name=website._id,id="Website"+website._id, contentEditable=true)=website.Website 
                        td(name=website._id, contentEditable=true)=website.Country_Rank 
                        td(name=website._id, contentEditable=true)=website.Child_Safety
                        td(name=website._id, contentEditable=true)=website.Trustworthiness
                        td(name=website._id, contentEditable=true)=website.Avg_Daily_Pageviews
                        td(name=website._id, contentEditable=true)=website.Privacy
                        td 
                            div
                                button(onclick="onDelete("+website._id+")") Delete
                                button(class="editButton") Edit
        button(onclick="onInsert()") Add new row

    script(src='/scripts/websites.js')
                        
                